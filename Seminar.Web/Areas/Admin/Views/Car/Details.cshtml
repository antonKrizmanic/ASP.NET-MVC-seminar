@using Seminar.Model
@model Seminar.Web.Models.CarTravel
@{
    ViewBag.Title = "Detalji o automobilu";
}
<h2>@ViewBag.Title</h2>
@if (Model == null)
{
    <div class="text-danger">
        <p>Ovaj auto ne postoji</p>
    </div>
}
else
{
    <table class="table table-hover table-condensed">
        <tr>
            <th>Tvrtka</th>
            <td>@Model.Car.Company.Name</td>
        </tr>
        <tr>
            <th>Ime</th>
            <td>@Model.Car.Name</td>
        </tr>
        <tr>
            <th>Godiste</th>
            <td>@Model.Car.Year</td>
        </tr>
        <tr>
            <th>Potrosnja goriva</th>
            <td>@Model.Car.FuelConsumption</td>
        </tr>
    </table>
    @Html.ActionLink("Uredi", "Edit", new { id = @Model.Car.ID })

    <h3>Nalozi u kojim je koristen ovaj auto</h3>
    <table class="table table-hover table-condensed">
        <tr>
            <th>Relacija</th>
            <th>Kilometri</th>
            <th>Zaposlenik</th>
        </tr>
        @foreach (var travelWarrant in Model.TravelWarrants)
        {
            <tr>
                <td>@travelWarrant.Relation</td>
                <td>@travelWarrant.Kilometer</td>
                <td>@travelWarrant.Employee.Name</td>
            </tr>
        }
    </table>
}
