@model Seminar.Model.TravelWarrant
    @{
        ViewBag.Title = "Detalji o putnom nalogu";
    }
<h2>@ViewBag.Title</h2>

@if (Model == null)
{
    <div class="text-danger">
        <p>Ovaj putni nalog ne postoji</p>
    </div>
}
else
{
    <table class="table table-hover table-condensed">
        <tr>
            <th>Tvrtka: </th>
            <td>@Model.Company.Name</td>
        </tr>
        <tr>
            <th>Relacija: </th>
            <td>@Model.Relation</td>
        </tr>
        <tr>
            <th>Kilometraža: </th>
            <td>@Model.Kilometer</td>
        </tr>
        <tr>
            <th>Radnik: </th>
            <td>@Model.Employee.Name</td>
        </tr>
        <tr>
            <th>Vozilo: </th>
            <td>@Model.Car.Name</td>
        </tr>
        <tr>
            <th>Svrha puta: </th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Datum: </th>
            <td>@Model.Date.ToShortDateString()</td>
        </tr>
        
    </table>

    @Html.ActionLink("Uredi","Edit",new {id=@Model.ID},new {@class="btn btn-primary"})
}